---
import ButtonPlaylist from "./ButtonPlaylist.jsx";
const { id, title, cover, artists } = Astro.props;
---

<article
  class="bg-zinc-700/30 p-2 max-w-[11rem] backdrop-blur-2xl rounded-lg pb-4 group relative overflow-hidden"
>
  <a
    href={`/playlist/${id}`}
    class="flex flex-col gap-2"
    transition:name=`playlist ${id} box`
  >
    <picture class="aspect-square rounded-lg overflow-hidden">
      <img
        class="object-cover"
        src={cover}
        alt={title}
        transition:name=`image_album${id}`
      />
    </picture>

    <div>
      <h3 class="text-white" transition:name=`title_album ${id}`>{title}</h3>
      <small class="text-xs" transition:name=`artists_album ${id}`
        >{artists.join(", ")}</small
      >
    </div>
  </a>

  <ButtonPlaylist id={id} client:visible />
</article>
