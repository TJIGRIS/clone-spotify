---
const { href, cover, title, artists } = Astro.props;
---

<li>
  <a
    href={href}
    class="flex gap-x-3 p-2 hover:bg-P-background-tinted-base rounded-lg transition-all duration-200"
  >
    <picture class="aspect-square w-1/6 rounded-lg overflow-hidden">
      <img src={cover} alt="" />
    </picture>

    <div>
      <h3 class="font-medium">{title}</h3>
      <small class="text-P-text-subdued">{artists.join(', ')}</small>
    </div>
  </a>
</li>
