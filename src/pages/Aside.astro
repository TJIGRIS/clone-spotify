---
// import icons
import LinkAside from "@components/LinkAside.astro";
import HomeIcon from "@icons/Home.astro";
import SearchIcon from "@icons/Search.astro";
import LibraryIcon from "@icons/Library.astro";

// components
import LinkPlaylist from "@components/LinkPlaylist.astro";

// import array playlists
import { playlists } from "@lib/data";
---

<aside class="[grid-area:aside] flex flex-col gap-2">
  <section class="bg-zinc-900 rounded-lg p-2">
    <LinkAside title="Inicio">
      <HomeIcon />
    </LinkAside>
    <LinkAside title="Buscar">
      <SearchIcon />
    </LinkAside>
  </section>

  <section class="flex-grow bg-zinc-900 rounded-lg p-2">
    <div class="flex gap-3 p-2">
      <LibraryIcon />
       Tu Biblioteca
    </div>

    <div class="flex flex-col gap-2 pt-2">
      {playlists.map((item) => <LinkPlaylist {...item} />)}
    </div>
  </section>
</aside>
